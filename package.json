{
  "name": "git-todo",
  "version": "2.2.0",
  "description": "âœ“ getting things done with git",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "lint": "prettier lib/** __tests__/** bin/** --check",
    "test": "vitest --run",
    "coverage": "tap test --coverage --coverage-report=lcov",
    "pack": "pkg bin/git-todo.js -c package.json -o packed/git-todo"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gabrielcsapo/git-todo.git"
  },
  "keywords": [
    "git",
    "utility",
    "todo"
  ],
  "author": "Gabriel J. Csapo <gabecsapo@gmail.com>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/gabrielcsapo/git-todo/issues"
  },
  "homepage": "https://github.com/gabrielcsapo/git-todo#readme",
  "bin": {
    "git-todo": "./bin/git-todo.js"
  },
  "pkg": {
    "scripts": [
      "bin/**.js",
      "lib/**.js",
      "index.js"
    ],
    "targets": [
      "node8-alpine-x64",
      "node8-linux-x64",
      "node8-macos-x64",
      "node8-win-x64"
    ]
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "fast-glob": "^3.3.1",
    "figures": "^5.0.0",
    "woof": "^0.4.1"
  },
  "devDependencies": {
    "pkg": "^4.3.4",
    "prettier": "^3.0.0",
    "vitest": "^0.33.0"
  }
}
